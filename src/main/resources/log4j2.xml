<Configuration status="WARN" >
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %p %m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="controller" level="debug">
			<AppenderRef ref="Console" />
		</Logger>
	<Root level="error">
		<AppenderRef ref="Console" />
	</Root>
	</Loggers>

</Configuration>
